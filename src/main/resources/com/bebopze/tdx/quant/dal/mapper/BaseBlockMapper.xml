<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bebopze.tdx.quant.dal.mapper.BaseBlockMapper">


    <select id="getIdByCode" resultType="long">
        SELECT id
        FROM base_block
        WHERE code = #{code}
    </select>


    <select id="getByCode" parameterType="java.lang.String" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockDO">
        SELECT *
        FROM base_block
        WHERE code = #{code}
    </select>


    <select id="getSimpleByCode" parameterType="java.lang.String" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockDO">
        SELECT id,
               code,
               name,
               code_path,
               name_path,
               parent_id,
               type,
               level,
               end_level

        FROM base_block
        WHERE code = #{code}
    </select>


    <select id="getSimpleById" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockDO">
        SELECT id,
               code,
               name,
               code_path,
               name_path,
               parent_id,
               type,
               level,
               end_level

        FROM base_block
        WHERE id = #{id}
    </select>


    <select id="listAllSimple" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockDO">
        SELECT id,
               code,
               name,
               code_path,
               name_path,
               parent_id,
               type,
               level,
               end_level

        FROM base_block
    </select>


    <select id="listAllKline" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockDO">
        SELECT *

        FROM base_block
    </select>


    <select id="listAllRpsKline" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockDO">
        SELECT *

        FROM base_block

        WHERE end_level = 1
          and (type = 2 or type = 4)
    </select>


    <select id="listSimpleByCodeList" parameterType="java.lang.String" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockDO">

        SELECT

        id,
        code,
        name,
        code_path,
        name_path,
        parent_id,
        type,
        level,
        end_level


        FROM base_block

        <where>
            code IN
            <foreach collection="codeList" open="(" separator="," close=")" item="code">
                #{code}
            </foreach>
        </where>
    </select>


</mapper>