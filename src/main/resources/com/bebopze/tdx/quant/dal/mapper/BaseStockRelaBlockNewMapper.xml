<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bebopze.tdx.quant.dal.mapper.BaseStockRelaBlockNewMapper">


    <delete id="delByBlockNewId" parameterType="long">
        DELETE
        FROM base_stock_rela_block_new
        WHERE block_new_id = #{blockNewId}
    </delete>


    <delete id="deleteAll">
        DELETE
        FROM base_stock_rela_block_new
    </delete>


    <select id="listBlockByStockCode" resultType="com.bebopze.tdx.quant.dal.entity.BaseBlockNewDO">
        SELECT bn.*

        FROM base_stock_rela_block_new r
                 LEFT JOIN base_stock s ON r.stock_id = s.id
                 LEFT JOIN base_block_new bn ON r.block_new_id = bn.id

        WHERE s.code = #{stockCode}
          AND r.type = #{type}
    </select>


</mapper>
